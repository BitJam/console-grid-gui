#!/bin/bash

LIB_DIR=/usr/lib/shell
loc_lib=./lib
test -e $loc_lib/lib-screen.sh && LIB_DIR=$loc_lib
. $LIB_DIR/lib-menu.sh


main() {
    #grid_color_scheme light

    screen_set title1=$"Office Applications Control Centre"
    screen_set box=-s border=1
    set_title_2

    init

    hide_tty
    clear
    redraw
    main_loop
}

init() {
    screen_init
    grid_read_new antix_sysinfo "$(make_menu)"
    grid_narrow y=3 title=$"Office Applications"
    grid_set xgap=3
    grid_center_x
    grid_fill_y 15
    grid_finalize
}

antix_sysinfo_on_enter() {
    local name=$1 sel=$3
    cmd=$(echo "$name" | cut -d: -f1)

    exit_to_main "$cmd"

    case $cmd in
            wordgrinder) run_cmd  $cmd    ;;
               calcurse) run_cmd  $cmd    ;;
                   nano) run_cmd  $cmd    ;;    
                    vim) run_cmd  $cmd    ;;
               X) run_cmd -sp $cmd        ;;
               X) run_cmd -sp $cmd        ;;
               *)  db_msg "Would do action %s" "$white$cmd"
    esac
    return
}

make_menu() {
    add_cmd "wordgrinder"   "Word Processor"
    add_cmd "calcurse"      "Calendar/Schedule"
    add_cmd "nano"          "Simple text editor"
    add_cmd "vim"           "Advanced text editor"
    add_cmd ""           ""
    show_cmds
    return_to_main_entry
}

DEBUG=true
[ "$DEBUG" = "true" ] || log_file=/dev/null

main "$@" 2>> $log_file



